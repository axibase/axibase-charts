@require './config'

.content
  code
    color #980e38
    padding 0.05rem 0.3rem
    margin 0 0.15rem
    font-size 0.85em
    border-radius 3px
    border: 1px solid silver;
    background-color: rgba(127,127,127,0.04);
  a code
    color $linkColor
  table
    code
      white-space: nowrap;

.content
  pre, pre[class*="language-"]
    background-color $codeBgColor
    line-height 1.4
    border-radius 6px
    padding 1.25rem 1.5rem
    margin 0.85rem 0
    white-space pre
    word-break break-word
    overflow auto
    position relative
    code
      color #111
      padding 0
      border none
      background-color transparent
      border-radius 0
      margin 0
    &:before
      position absolute
      top 0.8em
      right 1em
      font-size 0.75rem
      color rgba(255, 255, 255, 0.4)
  .highlighted-line
    background-color rgba(0, 0, 0, 66%)
    display block
    margin 0 -1.5rem
    padding 0 1.5rem
